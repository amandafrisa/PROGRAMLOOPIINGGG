# Looping untuk menghitung posisi pada setiap detik
for t in range(total_time + 1):
    waktu.append(t)
    posisi.append(posisi_benda(v, t))

# Plot grafik posisi terhadap waktu
plt.figure(figsize=(10, 6))
plt.plot(waktu_list, posisi_list, label="Posisi (x) terhadap Waktu (t)", color="b")
plt.xlabel("Waktu (detik)")
plt.ylabel("Posisi (meter)")
plt.title("Grafik Posisi Terhadap Waktu untuk Gerak Lurus Beraturan")
plt.legend()
plt.grid()
plt.show()
